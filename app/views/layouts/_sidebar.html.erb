<% if %w(pages articles).include?(controller.controller_name) %>
    <% unless %w(chat about inside).include?(controller.action_name) %>
        <h4>Recent Posts</h4>
        <ul class="posts">
        
        <% @all_articles.each do |article| %>
            <li>
              <%# TODO: use the class, probably take out id %>
              <%= link_to article.title, article_path(article),
                  class: 'article_title', id: "article_#{article.id}" %>
            </li>
        <% end %>
        </ul>

        <h4>My Tumblr Feed</h4>
        <%= blog_feed %>

    <% end %>
<% end %>



<% if %w(about).include?(controller.action_name) %>
    <div class="tweets">
        <%= render "shared/twitter" %>
    </div>
<% end %>


